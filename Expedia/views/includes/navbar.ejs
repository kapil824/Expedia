<nav class="bg-black text-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center px-6 py-3">
    <!-- Left: Logo & Profile -->
    <div class="flex items-center space-x-4">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-orange-500 hover:text-orange-400 transition">
        <i class="fa-solid fa-compass" style="color: #f97316;"></i>
      </a>

      <!-- Profile Icon -->
      <div class="relative">
        <button id="profile-btn" class="text-white focus:outline-none">
          <i class="fa-solid fa-user text-2xl hover:text-orange-400 transition"></i>
        </button>

      <!-- Logout dropdown -->
        <div id="logout-menu" class="absolute left-0 mt-3 w-44 bg-white rounded-xl shadow-lg hidden z-50 overflow-hidden border border-gray-200">
        <% if (!currentUser) { %>
          <a href="/signup" class="flex justify-between items-center w-full px-5 py-3 text-sm text-gray-800 hover:bg-orange-500 hover:text-white transition-all duration-200 font-medium">
          <span>Sign Up</span>
          <i class="fa-solid fa-user-plus"></i>
        </a>
        <a href="/login" class="flex justify-between items-center w-full px-5 py-3 text-sm text-gray-800 hover:bg-orange-500 hover:text-white transition-all duration-200 font-medium">
          <span>Login</span>
          <i class="fa-solid fa-right-to-bracket"></i>
        </a>
        <%}%>
        <% if (currentUser) { %>
          <a href="/logout" class="flex justify-between items-center w-full px-5 py-3 text-sm text-gray-800 hover:bg-orange-500 hover:text-white transition-all duration-200 font-medium">
          <span>Logout</span>
          <i class="fa-solid fa-right-from-bracket"></i>
        </a>
        <a href="/profile" class="flex justify-between items-center w-full px-5 py-3 text-sm text-gray-800 hover:bg-orange-500 hover:text-white transition-all duration-200 font-medium">
          <span>Profile</span>
          <i class="fa-solid fa-user"></i>
        </a>
        <% } %>
        </div>


      </div>
    </div>

    <!-- Hamburger button (hidden on md and up) -->
    <button id="menu-btn" class="md:hidden flex items-center focus:outline-none">
      <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"
        stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Nav links -->
    <div id="menu" class="hidden md:flex space-x-6 items-center">
      <a href="/" class="hover:text-orange-400 transition font-medium">Home</a>
      <a href="/listings" class="hover:text-orange-400 transition font-medium">All Listings</a>
      <a href="/listings/newlist"
        class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-xl font-semibold transition shadow">
        + Add Listing
      </a>
    </div>
  </div>

  <!-- Mobile menu (hidden by default) -->
  <div id="mobile-menu" class="hidden bg-black text-white px-6 pb-4 md:hidden">
    <a href="/" class="block py-2 hover:text-orange-400 font-medium">Home</a>
    <a href="/listing" class="block py-2 hover:text-orange-400 font-medium">All Listings</a>
    <a href="/listings/newlist"
      class="block py-2 bg-orange-500 hover:bg-orange-600 rounded-xl font-semibold text-center shadow mt-2">
      + Add Listing
    </a>
  </div>

  <script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const profileBtn = document.getElementById('profile-btn');
    const logoutMenu = document.getElementById('logout-menu');

    // Toggle mobile nav
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Toggle logout menu
    profileBtn.addEventListener('click', () => {
      logoutMenu.classList.toggle('hidden');
    });

    // Close dropdown if clicking outside
    window.addEventListener('click', (e) => {
      if (!profileBtn.contains(e.target) && !logoutMenu.contains(e.target)) {
        logoutMenu.classList.add('hidden');
      }
    });
  </script>
</nav>
