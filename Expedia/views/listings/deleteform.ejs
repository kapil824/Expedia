<% layout("/layouts/boilerplate") %>

<body
  style="background-color: #121212; height: 100vh; width: 100vw; margin: 0;"
  class="flex items-center justify-center px-4 py-8"
>
  <div
    style="background-color: #1e1e1e;"
    class="border border-gray-700 shadow-xl rounded-2xl p-6 sm:p-8 max-w-md w-full relative"
  >
    <div>
      <p class="mb-6 text-lg text-gray-300 text-center">
        ‚ö†Ô∏è Are you sure you want to delete the listing?
      </p>
      <p class="mb-6 text-lg font-semibold text-white text-center">
        Hotel Name: <span class="text-yellow-400"><%= listing.title %></span>
      </p>
    </div>

    <div class="mb-6">
      <img
        src="<%= listing.image.url %>"
        alt="<%= listing.title %>"
        class="w-full h-48 sm:h-56 object-cover rounded-lg border border-gray-600"
      />
    </div>

    <form action="/listings/<%=listing._id %>" method="POST" class="space-y-4">
      <button
        type="submit"
        class="w-full bg-red-600 text-white py-2 rounded-lg font-medium hover:bg-red-700 transition duration-200"
      >
        üóëÔ∏è Yes, Delete
      </button>
    </form>

    <a
      href="/listings"
      class="block mt-4 text-center bg-gray-700 text-gray-200 hover:bg-gray-600 hover:text-white transition duration-200 px-4 py-2 rounded-md shadow-md"
    >
      ‚ùå Cancel and Go Back
    </a>

    <p class="mt-8 text-gray-500 text-sm text-center italic">
      ‚ö†Ô∏è This action cannot be undone. Please confirm your choice.
    </p>
  </div>
</body>
